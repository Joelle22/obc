<p id="notice"><%= notice %></p>

<h1>Listing Books</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Title</th>
      <th>Author</th>
      <th>Color</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <th><img src="/assets/<%= book.id %>thumbnail.jpg" style="width:128px;">
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.color %></td>
        <td><%= link_to 'Rate', book %></td>
        <td><%= link_to 'Rent', book %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>
